.post {
  width:50%;
  margin: 1em auto;
  padding: 30px 50px;

}
.posts  {
  border-left:1px solid #DDDDDD;
  .post:first-child {
    margin-top: 1em;
  }
  .post-title {
    font-size: 1.5em;
    .post-title-link {
      color: #368CCB;
      text-decoration: none;
    }
  }
  .post-content {
    a {
      color: #368CCB;
      text-decoration: none;
    }
  }
  .post-meta {
    color: #BABABA;
  }
}